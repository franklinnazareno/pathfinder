<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/aboutUs"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="About Us"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/franklinImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:src="@drawable/franklin_nazareno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutUs" />

        <TextView
            android:id="@+id/aboutUsDescription"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="197dp"
            android:layout_height="103dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="This application was created by\n Franklin Nazareno."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/franklinImg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>