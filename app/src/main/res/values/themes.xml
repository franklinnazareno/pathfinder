<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NazarenoPathFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Use shades of green for the primary and primary variant colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Use a lighter shade of green for the secondary color -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color should be the same as the primary variant color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="Theme.NazarenoPathFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.NazarenoPathFinder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.NazarenoPathFinder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="windowActionBar">false</item>
    </style>
</resources>